<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        Title="ToDo" Height="450" Width="800">
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="0">
                <StackPanel VerticalAlignment="Top">
                    <Button Grid.Column="0" Content="Settings" Name="BtnSettings" Margin="5" Height="30" FontSize="16"/>
                    <Button Grid.Column="0" Content="Edit Tags" Name="BtnEditTags" Margin="5"  Height="30" FontSize="16"/>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="2">
                <ListBox Name="LstPinned" Margin="5" FontSize="16">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="16"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <Border BorderThickness="1" BorderBrush="Black" Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <TextBox Text="~/" Name="LblPath" Margin="5" FontSize="30" Grid.Row="0"/>

                <ListView Grid.Row="1" FontSize="16" Margin="5">
                    <!--Template-->
                    <DataTemplate>
                        <Grid Margin="0 5" Background="#DDD" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <!-- Data -->
                            <CheckBox Grid.Column="0" Height="30" Width="30" IsChecked="{Binding MarkAsCompleted}"/>
                            <!-- Colored Tags e.g. #FF4354 -->
                            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Left">
                                <Rectangle Width="10" Height="20" Fill="{Binding TagColor1}"  Margin="2"/>
                                <Rectangle Width="10" Height="20" Fill="{Binding TagColor2}" Margin="2"/>
                                <Rectangle Width="10" Height="20" Fill="{Binding TagColor3}" Margin="2"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Name}" Grid.Column="2" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Duration}" Grid.Column="3" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding StartDate}" Grid.Column="4" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Create new" Name="BtnCreateNew" Margin="5" FontSize="16"/>
                    <Button Grid.Column="1" Content="Update selected" Name="BtnUpdate" Margin="5" FontSize="16"/>
                    <Button Grid.Column="2" Content="Delete selected" Name="BtnDelete" Margin="5" FontSize="16"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
